@model ProyectoFinalASP_MVC.Models.Categoria

@{
    ViewBag.Title = "Details";
}
<div style="margin-left:5%; margin-right:5%;">
    <h2>Detalles de categoria</h2>

    <div>       
        <hr />
        <dl class="dl-horizontal">
            <dt>               
                Descripción
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descripcionCategoria)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.idCategoria },htmlAttributes: new { @class = "btn btn-warning" }) 
        @Html.ActionLink("Regresar al listado", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
    </p>
</div>