@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li style="margin-right:0.5em; margin-bottom:0.25em; margin-top:0.25em;">
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-primary" })
        </li>
        <li style="margin-right:0.5em; margin-bottom:0.25em; margin-top:0.25em;"><a href="javascript:document.getElementById('logoutForm').submit()" class = "btn btn-primary">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">

    <li style="margin-right:0.5em; margin-bottom:0.25em; margin-top:0.25em;">
        @Html.ActionLink("Registrarse", "Register", "Account", routeValues: null,
        htmlAttributes: new { @class = "btn btn-primary" })
    </li>
    
    <li style="margin-right:0.5em; margin-bottom:0.25em; margin-top:0.25em;">
    @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, 
    htmlAttributes: new { @class = "btn btn-primary" })
    </li>
</ul>
}
